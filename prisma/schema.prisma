generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum TipoTransacao {
  RECEITA
  DESPESA
}

model Categoria {
  id         Int           @id @default(autoincrement())
  nome       String
  tipo       TipoTransacao
  transacoes Transacao[]

  @@map("categorias")
}

model Transacao {
  id          Int           @id @default(autoincrement())
  titulo      String
  descricao   String?
  valor       Decimal       @db.Decimal(10, 2)
  tipo        TipoTransacao
  categoriaId Int
  categoria   Categoria     @relation(fields: [categoriaId], references: [id])
  criadoEm    DateTime      @default(now())

  @@map("transacoes")
}
