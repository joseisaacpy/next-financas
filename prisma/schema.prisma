generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum CategoriaGasto {
  ALIMENTACAO
  MORADIA
  SAUDE
  TRANSPORTE
  ROUPAS_ACESSORIOS
  LAZER
  OUTROS
}

model Gasto {
  id        Int            @id @default(autoincrement())
  titulo    String
  descricao String?
  valor     Decimal        @db.Decimal(10, 2)
  categoria CategoriaGasto

  criadoEm DateTime @default(now())

  @@map("gastos")
}

enum CategoriaReceita {
  SALARIO
  PROJETOS_FREELAS
  OUTROS
  PRESENTES
}

model Receita {
  id        Int     @id @default(autoincrement())
  titulo    String
  descricao String?
  valor     Decimal @db.Decimal(10, 2)

  categoria CategoriaReceita
  criadoEm  DateTime         @default(now())

  @@map("receitas")
}
